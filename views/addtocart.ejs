                    e.preventDefault();
                }
            });
        }

        // Add keyboard navigation for quantity inputs
        document.querySelectorAll('.quantity-input').forEach(input => {
            input.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    this.value = parseInt(this.value) + 1;
                    this.dispatchEvent(new Event('change'));
                } else if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    if (parseInt(this.value) > 1) {
                        this.value = parseInt(this.value) - 1;
                        this.dispatchEvent(new Event('change'));
                    }
                }
            });
        });

        // Add hover effects to cart items
        document.querySelectorAll('.cart-item').forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
                this.style.boxShadow = 'var(--hover-shadow)';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.transform = '';
                this.style.boxShadow = 'var(--shadow)';
            });
        });

        // Add animation to checkout button
        const checkoutButton = document.querySelector('.checkout-btn');
        if (checkoutButton) {
            checkoutButton.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px)';
                this.style.boxShadow = '0 8px 20px rgba(67, 97, 238, 0.4)';
            });
            
            checkoutButton.addEventListener('mouseleave', function() {
                this.style.transform = '';
                this.style.boxShadow = '0 4px 14px rgba(67, 97, 238, 0.3)';
            });
        }

        // Add ripple effect to buttons
        document.querySelectorAll('.btn, .quantity-btn, .remove-btn, .checkout-btn').forEach(button => {
            button.addEventListener('click', function(e) {
                const rect = this.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const ripple = document.createElement('span');
                ripple.className = 'ripple';
                ripple.style.left = `${x}px`;
                ripple.style.top = `${y}px`;
                
                this.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.remove();
                }, 1000);
            });
        });

        // Style for ripple effect
        const style = document.createElement('style');
        style.textContent = `
            .ripple {
                position: absolute;
                border-radius: 50%;
                background-color: rgba(255, 255, 255, 0.7);
                transform: scale(0);
                animation: ripple 0.6s linear;
                pointer-events: none;
            }
            
            @keyframes ripple {
                to {
                    transform: scale(4);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);

        // Add to cart animation
        function addToCartAnimation(productElement) {
            const productRect = productElement.getBoundingClientRect();
            const cartFabRect = fab.getBoundingClientRect();
            
            const animationElement = productElement.cloneNode(true);
            animationElement.style.position = 'fixed';
            animationElement.style.top = `${productRect.top}px`;
            animationElement.style.left = `${productRect.left}px`;
            animationElement.style.width = `${productRect.width}px`;
            animationElement.style.height = `${productRect.height}px`;
            animationElement.style.zIndex = '1000';
            animationElement.style.pointerEvents = 'none';
            animationElement.style.transition = 'all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1)';
            
            document.body.appendChild(animationElement);
            
            setTimeout(() => {
                animationElement.style.top = `${cartFabRect.top}px`;
                animationElement.style.left = `${cartFabRect.left}px`;
                animationElement.style.width = '20px';
                animationElement.style.height = '20px';
                animationElement.style.opacity = '0.5';
            }, 10);
            
            setTimeout(() => {
                animationElement.remove();
            }, 510);
        }

        // Initialize all animations and effects
        document.addEventListener('DOMContentLoaded', function() {

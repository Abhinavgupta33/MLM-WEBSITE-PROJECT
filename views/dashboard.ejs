    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Initialize AOS animations
        AOS.init({
          duration: 800,
          easing: 'ease-in-out',
          once: true
        });
        
        // Enhanced background animation
        function createBubbles() {
          const bgAnimation = document.querySelector('.bg-animation');
          
          // Clear existing bubbles
          bgAnimation.innerHTML = '';
          
          // Create bubbles based on theme
          const isDarkMode = document.body.classList.contains('dark-mode');
          const bubbleCount = isDarkMode ? 15 : 25;
          const bubbleSizeMin = isDarkMode ? 40 : 20;
          const bubbleSizeMax = isDarkMode ? 100 : 80;
          const bubbleOpacity = isDarkMode ? 0.05 : 0.1;
          
          for (let i = 0; i < bubbleCount; i++) {
            const bubble = document.createElement('span');
            const size = Math.random() * (bubbleSizeMax - bubbleSizeMin) + bubbleSizeMin;
            const posX = Math.random() * 100;
            const delay = Math.random() * 15;
            const duration = 15 + Math.random() * 15;
            
            bubble.style.width = `${size}px`;
            bubble.style.height = `${size}px`;
            bubble.style.left = `${posX}%`;
            bubble.style.animationDelay = `${delay}s`;
            bubble.style.animationDuration = `${duration}s`;
            bubble.style.opacity = bubbleOpacity;
            
            bgAnimation.appendChild(bubble);
          }
        }
        
        // Initial bubble creation
        createBubbles();
        
        // Initialize charts
        const usersCtx = document.getElementById('usersChart').getContext('2d');

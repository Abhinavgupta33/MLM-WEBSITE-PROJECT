    <style>
      :root {
        --primary-color: #6366f1;
        --primary-light: #a5b4fc;
        --secondary-color: #8b5cf6;
        --accent-color: #ec4899;
        --success-color: #10b981;
        --info-color: #3b82f6;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --dark-color: #1e293b;
        --light-color: #f8fafc;
        --sidebar-width: 280px;
        --header-height: 70px;
        --card-radius: 16px;
        --transition-speed: 0.3s;
      }
      
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      /* Main Layout Structure */
      #main {
        display: flex;
        flex: 1;
        padding-top: var(--header-height);
      }
      
      /* Sidebar Styles */
      .sidebar-container {
        width: var(--sidebar-width);
        min-height: 100vh;
        position: fixed;
        left: 0;
        top: var(--header-height);
        background: #ffffff;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.05);
        z-index: 100;
        overflow-y: auto;
      }
      
      .sidebar-content {
        padding: 20px 15px;
      }
      
      /* Main Content Area */
      .main-content {
        flex: 1;
        padding: 20px;
        background-color: #f8f9fa;
        min-height: calc(100vh - var(--header-height));
        margin-left: var(--sidebar-width);
      }
      
      /* Dashboard Cards */
      .dashboard-card {
        border: none;
        border-radius: var(--card-radius);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        transition: all var(--transition-speed) ease;
        background: white;
        position: relative;
        overflow: hidden;
      }
      
      .dashboard-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 5px;
        height: 100%;
        background: linear-gradient(to bottom, var(--primary-color), var(--secondary-color));
      }
      
      .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
      }
      
      /* Card Icon */
      .card-icon-container {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        font-size: 1.75rem;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
      }
      
      /* Enhanced Quick Actions */
      .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
        margin-top: 20px;
      }
      
      .quick-action-card {
        background: white;
        border-radius: var(--card-radius);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        transition: all var(--transition-speed) ease;
        border: none;
        overflow: hidden;
        text-align: center;
        padding: 25px 15px;
        position: relative;
        border-top: 4px solid var(--primary-color);
      }
      
      .quick-action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
      }
      
      .quick-action-icon {
        width: 60px;
        height: 60px;
        margin: 0 auto 15px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: white;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
      }
      
      .quick-action-title {
        font-weight: 600;
        margin-bottom: 5px;
        color: var(--dark-color);
      }
      
      .quick-action-desc {
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 15px;
      }
      
      .quick-action-btn {
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        background: rgba(99, 102, 241, 0.1);
        color: var(--primary-color);
        border: none;
        transition: all 0.3s ease;
      }
      
      .quick-action-card:hover .quick-action-btn {
        background: var(--primary-color);
        color: white;
      }
      
      /* Different color variations for cards */
      .quick-action-card:nth-child(1) { border-top-color: var(--primary-color); }
      .quick-action-card:nth-child(1) .quick-action-icon { 
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); 
      }
      
      .quick-action-card:nth-child(2) { border-top-color: var(--success-color); }
      .quick-action-card:nth-child(2) .quick-action-icon { 
        background: linear-gradient(135deg, var(--success-color), #34d399); 
      }
      
      .quick-action-card:nth-child(3) { border-top-color: var(--info-color); }
      .quick-action-card:nth-child(3) .quick-action-icon { 
        background: linear-gradient(135deg, var(--info-color), #60a5fa); 
      }
      
      .quick-action-card:nth-child(4) { border-top-color: var(--warning-color); }
      .quick-action-card:nth-child(4) .quick-action-icon { 
        background: linear-gradient(135deg, var(--warning-color), #fbbf24); 
      }
      
      .quick-action-card:nth-child(5) { border-top-color: var(--danger-color); }
      .quick-action-card:nth-child(5) .quick-action-icon { 
        background: linear-gradient(135deg, var(--danger-color), #f87171); 
      }
      
      .quick-action-card:nth-child(6) { border-top-color: var(--accent-color); }
      .quick-action-card:nth-child(6) .quick-action-icon { 
        background: linear-gradient(135deg, var(--accent-color), #f472b6); 
      }
      
      .quick-action-card:nth-child(7) { border-top-color: #8b5cf6; }
      .quick-action-card:nth-child(7) .quick-action-icon { 
        background: linear-gradient(135deg, #8b5cf6, #c4b5fd); 
      }
      
      .quick-action-card:nth-child(8) { border-top-color: #10b981; }
      .quick-action-card:nth-child(8) .quick-action-icon { 
        background: linear-gradient(135deg, #10b981, #6ee7b7); 
      }
      
      /* Recent Activity */
      .recent-activity {

    .corner-decoration.bottom-left {
      bottom: 0;
      left: 0;
      border-bottom: 3px solid var(--tertiary);
      border-left: 3px solid var(--tertiary);
      border-bottom-left-radius: 24px;
      animation: cornerGlow 4s ease infinite 1s;

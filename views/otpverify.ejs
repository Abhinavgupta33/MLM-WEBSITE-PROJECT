    @keyframes borderPulse {
      0%, 100% { opacity: 0.3; }
      50% { opacity: 0.6; }
    }
    
    /* New animated floating label */
    .floating-label {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

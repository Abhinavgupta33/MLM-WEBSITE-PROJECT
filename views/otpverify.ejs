      color: rgba(94, 114, 228, 0.3);
      z-index: -2;
      animation: floatText linear infinite;
      pointer-events: none;
    }
    
    @keyframes floatText {
      0% { transform: translateY(0) translateX(0) rotate(0deg); opacity: 0; }
      10% { opacity: 0.5; }
      90% { opacity: 0.5; }
      100% { transform: translateY(-100vh) translateX(20px) rotate(10deg); opacity: 0; }

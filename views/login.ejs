<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Alumni Portal | Login</title>
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <!-- Google OAuth Client Library -->
  <script src="https://accounts.google.com/gsi/client" async defer></script>
  
  <style>
    :root {
      --primary: #4361ee;
      --primary-dark: #3a56d4;
      --white: #ffffff;
      --gray: #6c757d;
      --light-gray: #e9ecef;
      --border-radius: 8px;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: var(--white);
      display: flex;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      padding: 20px;
    }

    .login-container {
      max-width: 450px;
      width: 100%;
      margin: 0 auto;
      padding: 2rem;
    }

    .login-card {
      border-radius: var(--border-radius);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      background: var(--white);
      overflow: hidden;
    }

    .login-header {
      background: linear-gradient(135deg, var(--primary), var(--primary-dark));
      color: var(--white);
      padding: 1.5rem;
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .login-body {
      padding: 0 2rem 2rem;
    }

    .form-control {
      height: 48px;
      border-radius: var(--border-radius);
      border: 1px solid var(--light-gray);
      padding: 0 15px;
    }

    .btn-login {
      background-color: var(--primary);
      color: white;
      border: none;
      height: 48px;
      border-radius: var(--border-radius);
      width: 100%;
      font-weight: 500;
    }

    .btn-login:hover {
      background-color: var(--primary-dark);
    }

    .divider {
      display: flex;
      align-items: center;
      margin: 1.5rem 0;
      color: var(--gray);
    }

    .divider::before,
    .divider::after {
      content: "";
      flex: 1;
      border-bottom: 1px solid var(--light-gray);
    }

    .divider::before {
      margin-right: 1rem;
    }

    .divider::after {
      margin-left: 1rem;
    }

    #g_id_onload,
    #g_id_signin {
      width: 100%;
    }

    .g_id_signin {
      width: 100% !important;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="login-card">
      <div class="login-header">
        <h2>Alumni Portal</h2>
        <p>Sign in to your account</p>
      </div>

      <div class="login-body">
        <form id="loginForm" action="/loginrout" method="post">
          <div style="margin-bottom: 1rem;">
            <label for="yourUsername">Email Address</label>
            <input type="email" id="yourUsername" name="email" class="form-control" required placeholder="your@email.com">
          </div>

          <div style="margin-bottom: 1rem;">
            <label for="yourPassword">Password</label>
            <input type="password" id="yourPassword" name="pass" class="form-control" required placeholder="••••••••">
          </div>

          <button type="submit" class="btn-login">Sign In</button>

          <div class="divider">or continue with</div>

          <!-- Google OAuth Button -->
          <div id="g_id_onload"
            data-client_id="YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
            data-callback="handleGoogleSignIn">
          </div>
          <div class="g_id_signin"
            data-type="standard"
            data-size="large"
            data-theme="outline"
            data-text="signin_with"
            data-shape="rectangular">
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    // Handle Google OAuth response
    function handleGoogleSignIn(response) {
      console.log('Google OAuth response:', response);
      
      // Send credential to your backend for verification
      fetch('/api/google-auth', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ credential: response.credential })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          window.location.href = '/dashboard'; // Redirect on success
        } else {
          alert('Authentication failed: ' + (data.message || 'Unknown error'));
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Authentication failed. Please try again.');
      });
    }

    // Form submission handler
    document.getElementById('loginForm').addEventListener('submit', function(e) {
      const button = this.querySelector('button[type="submit"]');
      button.disabled = true;
      button.innerHTML = 'Signing in...';
      
      // Form will submit normally to /loginrout
      // For demo purposes, we're not preventing default
    });
  </script>
</body>
</html>
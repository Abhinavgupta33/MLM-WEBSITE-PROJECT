<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Products</title>
    
    <link href="../assets/img/favicon.png" rel="icon" />
    <link href="../assets/img/apple-touch-icon.png" rel="apple-touch-icon" />
  
    <link href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
    <link href="../assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="../assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="../assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="../assets/vendor/quill/quill.snow.css" rel="stylesheet" />
    <link href="../assets/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="../assets/vendor/simple-datatables/style.css" rel="stylesheet" />
  
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

    <style>
        :root {
            --primary: #4361ee;
            --primary-dark: #3a56d4;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --danger: #f72585;
            --warning: #f8961e;
            --info: #4895ef;
            --light: #f8f9fa;
            --dark: #212529;
            --gray: #6c757d;
            --light-gray: #e9ecef;
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            --card-bg: #ffffff;
            --body-bg: #f5f7fb;
            --text-color: #212529;
            --text-inverse: #f8f9fa;
            --border-color: rgba(0,0,0,0.1);
            --shadow-color: rgba(0,0,0,0.05);
            --modal-bg: #ffffff;
            --button-text: #ffffff;
            --sidebar-bg: #ffffff;
            --header-bg: #ffffff;
            --footer-bg: #ffffff;
        }

        [data-theme="dark"] {
            --primary: #4895ef;
            --primary-dark: #3a7bd5;
            --secondary: #560bad;
            --success: #4cc9f0;
            --danger: #f72585;
            --warning: #f8961e;
            --info: #4361ee;
            --light: #343a40;
            --dark: #f8f9fa;
            --gray: #adb5bd;
            --light-gray: #495057;
            --card-bg: #2d3748;
            --body-bg: #1a202c;
            --text-color: #f8f9fa;
            --text-inverse: #212529;
            --border-color: rgba(255,255,255,0.1);
            --shadow-color: rgba(0,0,0,0.3);
            --modal-bg: #2d3748;
            --button-text: #ffffff;
            --sidebar-bg: #2d3748;
            --header-bg: #2d3748;
            --footer-bg: #2d3748;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--body-bg);
            color: var(--text-color);
            overflow-x: hidden;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
        
        .admin-container {
            margin-left: 280px;
            padding: 30px;
            transition: var(--transition);
            min-height: calc(100vh - 120px);
        }
        
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--border-color);
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .page-title {
            color: var(--primary);
            font-weight: 600;
            margin: 0;
            font-size: 1.8rem;
            position: relative;
            display: inline-block;
        }
        
        .page-title::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -15px;
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--success));
            border-radius: 3px;
        }
        
        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
        }
        
        .product-card {
            background: var(--card-bg);
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 5px 15px var(--shadow-color);
            transition: var(--transition);
            position: relative;
            border: none;
            display: flex;
            flex-direction: column;
            height: 100%;
            transform: translateY(0);
            will-change: transform;
            border: 1px solid var(--border-color);
        }
        
        .product-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 10px 25px var(--shadow-color);
        }
        
        .product-image-container {
            height: 200px;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--light);
            overflow: hidden;
            position: relative;
        }
        
        .product-image {
            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            object-fit: contain;
            transition: transform 0.5s ease;
            padding: 15px;
        }
        
        .product-card:hover .product-image {
            transform: scale(1.1);
        }
        
        .product-badge {
            position: absolute;
            top: 12px;
            right: 12px;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.7rem;
            font-weight: 600;
            z-index: 1;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            color: var(--button-text);
        }
        
        .badge-stock {
            background-color: var(--warning);
        }
        
        .badge-low {
            background-color: var(--danger);
            animation: pulse 1.5s infinite;
        }
        
        .badge-new {
            background-color: var(--success);
            top: 12px;
            left: 12px;
            right: auto;
        }
        
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        
        .product-body {
            padding: 18px;
            position: relative;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }
        
        .product-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 8px;
            color: var(--text-color);
            display: -webkit-box;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
        
        .product-price {
            font-size: 1.2rem;
            color: var(--primary);
            font-weight: 700;
            margin-bottom: 12px;
        }
        
        .product-description {
            color: var(--gray);
            font-size: 0.85rem;
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            line-height: 1.5;
            flex-grow: 1;
        }
        
        .product-actions {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
            margin-top: auto;
        }
        
        /* Enhanced Buttons */
        .btn {
            display: inline-flex !important;
            align-items: center !important;
            justify-content: center !important;
            gap: 6px !important;
            font-weight: 500 !important;
            padding: 0.5rem 1rem !important;
            border-radius: 8px !important;
            transition: var(--transition) !important;
            border: none !important;
            cursor: pointer !important;
            font-size: 0.85rem !important;
            line-height: 1.5 !important;
            text-decoration: none !important;
            position: relative !important;
            overflow: hidden !important;
            color: var(--button-text) !important;
        }
        
        .btn-sm {
            padding: 0.4rem 0.8rem !important;
            font-size: 0.8rem !important;
        }
        
        .btn i {
            font-size: 0.9em !important;
        }
        
        .btn-add {
            background-color: var(--primary) !important;
            box-shadow: 0 4px 6px rgba(67, 97, 238, 0.2) !important;
        }
        
        .btn-add:hover {
            background-color: var(--primary-dark) !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 6px 10px rgba(67, 97, 238, 0.3) !important;
        }
        
        /* Improved View Button */
        .btn-view {
            background-color: var(--info) !important;
            color: white !important;
        }
        
        .btn-view:hover {
            background-color: #3a7bd5 !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 4px 8px rgba(58, 123, 213, 0.2) !important;
        }
        
        /* Improved Edit Button */
        .btn-edit {
            background-color: #28a745 !important;
            color: white !important;
        }
        
        .btn-edit:hover {
            background-color: #218838 !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 4px 8px rgba(33, 136, 56, 0.2) !important;
        }
        
        /* Improved Delete Button */
        .btn-delete {
            background-color: #dc3545 !important;
            color: white !important;
        }
        
        .btn-delete:hover {
            background-color: #c82333 !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 4px 8px rgba(200, 35, 51, 0.2) !important;
        }
        
        .btn-secondary {
            background-color: var(--gray) !important;
            color: white !important;
        }
        
        .btn-secondary:hover {
            background-color: #5a6268 !important;
            transform: translateY(-2px) !important;
            box-shadow: 0 4px 8px rgba(90, 98, 104, 0.2) !important;
        }
        
        .btn-close {
            background: none !important;
            border: none !important;
            color: var(--gray) !important;
            font-size: 1.25rem !important;
            cursor: pointer !important;
            padding: 0.5rem !important;
            transition: var(--transition) !important;
        }
        
        .btn-close:hover {
            color: var(--danger) !important;
            transform: rotate(90deg) !important;
        }
        
        /* Modals */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0,0,0,0.6);
            backdrop-filter: blur(5px);
            z-index: 1000;
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .modal-overlay.active {
            display: block;
            opacity: 1;
        }
        
        .modal-container {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.95);
            width: 90%;
            max-width: 500px;
            background: var(--modal-bg);
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            z-index: 1001;
            display: none;
            opacity: 0;
            transition: var(--transition);
            border: 1px solid var(--border-color);
        }
        
        .modal-container.active {
            display: block;
            opacity: 1;
            transform: translate(-50%, -50%) scale(1);
        }
        
        .modal-header {
            padding: 18px 20px;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: var(--card-bg);
            border-radius: 12px 12px 0 0;
        }
        
        .modal-title {
            margin: 0;
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--primary);
        }
        
        .modal-body {
            padding: 20px;
            max-height: 60vh;
            overflow-y: auto;
            background-color: var(--modal-bg);
        }
        
        .modal-footer {
            padding: 15px 20px;
            border-top: 1px solid var(--border-color);
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            background-color: var(--card-bg);
            border-radius: 0 0 12px 12px;
        }
        
        .modal-image-container {
            width: 100%;
            height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--light);
            margin-bottom: 15px;
            border-radius: 8px;
            overflow: hidden;
        }
        
        .modal-image {
            max-width: 100%;
            max-height: 100%;
            width: auto;
            height: auto;
            object-fit: contain;
        }
        
        .modal-detail {
            margin-bottom: 12px;
        }
        
        .modal-detail-label {
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 5px;
            display: block;
            font-size: 0.9rem;
        }
        
        .modal-detail-value {
            color: var(--text-color);
            line-height: 1.6;
            font-size: 0.95rem;
        }
        
        /* Delete Modal Specific */
        .delete-modal .modal-header {
            background-color: var(--danger);
            color: var(--button-text);
            border-radius: 12px 12px 0 0;
        }
        
        .delete-modal .modal-title {
            color: var(--button-text);
        }
        
        .delete-modal .modal-body {
            text-align: center;
            padding: 25px 20px;
        }
        
        .delete-icon {
            font-size: 2.5rem;
            color: var(--danger);
            margin-bottom: 15px;
        }
        
        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 40px 20px;
            grid-column: 1 / -1;
            background-color: var(--card-bg);
            border-radius: 12px;
            border: 1px solid var(--border-color);
        }
        
        .empty-state i {
            font-size: 3rem;
            color: var(--gray);
            margin-bottom: 15px;
            opacity: 0.5;
        }
        
        .empty-state h3 {
            color: var(--gray);
            font-weight: 500;
            margin-bottom: 10px;
        }
        
        .empty-state p {
            color: var(--gray);
            margin-bottom: 20px;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }
        
        /* Ripple Effect */
        .ripple {
            position: absolute;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.4);
            transform: scale(0);
            animation: ripple 0.6s linear;
            pointer-events: none;
        }
        
        @keyframes ripple {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }
        
        /* Search and Filter Bar */
        .search-filter-bar {
            display: flex;
            gap: 15px;
            margin-bottom: 25px;
            flex-wrap: wrap;
        }
        
        .search-box {
            flex: 1;
            min-width: 250px;
            position: relative;
        }
        
        .search-box input {
            width: 100%;
            padding: 10px 15px 10px 40px;
            border-radius: 8px;
            border: 1px solid var(--border-color);
            background-color: var(--card-bg);
            color: var(--text-color);
            transition: var(--transition);
        }
        
        .search-box input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
        }
        
        .search-box i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray);
        }
        
        .filter-dropdown {
            position: relative;
        }
        
        .filter-dropdown button {
            padding: 10px 15px;
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            color: var(--text-color);
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .filter-dropdown button:hover {
            background-color: var(--light);
        }
        
        .filter-dropdown-content {
            position: absolute;
            right: 0;
            top: 100%;
            background-color: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 10px;
            min-width: 200px;
            box-shadow: 0 5px 15px var(--shadow-color);
            z-index: 100;
            display: none;
        }
        
        .filter-dropdown:hover .filter-dropdown-content {
            display: block;
        }
        
        .filter-option {
            padding: 8px 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: var(--transition);
        }
        
        .filter-option:hover {
            background-color: var(--light);
        }
        
        /* Responsive */
        @media (max-width: 1200px) {
            .admin-container {
                margin-left: 0;
                padding: 20px;
            }
        }
        
        @media (max-width: 992px) {
            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 20px;
            }
            
            .search-filter-bar {
                flex-direction: column;
            }
        }
        
        @media (max-width: 768px) {
            .product-grid {
                grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            }
            
            .page-header {
                flex-direction: column;
                align-items: stretch;
                gap: 15px;
            }
            
            .page-title::after {
                bottom: -12px;
            }
            
            .modal-container {
                width: 95%;
                max-width: 95%;
            }
            
            .modal-footer {
                flex-direction: column;
            }
            
            .modal-footer .btn {
                width: 100%;
            }
        }
        
        @media (max-width: 576px) {
            .product-grid {
                grid-template-columns: 1fr;
            }
            
            .admin-container {
                padding: 15px;
            }
            
            .product-actions {
                flex-direction: column;
                gap: 8px;
            }
            
            .product-actions .btn {
                width: 100%;
            }
        }
        
        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .fade-in {
            animation: fadeIn 0.5s ease forwards;
        }
        
        /* Loading State */
        .loading-state {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            grid-column: 1 / -1;
        }
        
        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid rgba(67, 97, 238, 0.1);
            border-radius: 50%;
            border-top-color: var(--primary);
            animation: spin 1s ease-in-out infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        /* Card hover animation */
        @keyframes cardHover {
            0% { transform: translateY(0) scale(1); }
            50% { transform: translateY(-5px) scale(1.02); }
            100% { transform: translateY(-5px) scale(1.02); }
        }
        
        .product-card:hover {
            animation: cardHover 0.3s ease forwards;
        }
        
        /* Floating animation for empty state icon */
        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }
        
        .empty-state i {
            animation: float 3s ease-in-out infinite;
        }
        
        /* Toast Notification */
        .toast {
            position: fixed;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            background-color: var(--card-bg);
            color: var(--text-color);
            padding: 15px 20px;
            border-radius: 8px;
            box-shadow: 0 5px 15px var(--shadow-color);
            z-index: 9999;
            display: flex;
            align-items: center;
            gap: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
            border: 1px solid var(--border-color);
            max-width: 90%;
        }
        
        .toast.show {
            opacity: 1;
        }
        
        .toast-success {
            border-left: 4px solid var(--success);
        }
        
        .toast-error {
            border-left: 4px solid var(--danger);
        }
        
        .toast-warning {
            border-left: 4px solid var(--warning);
        }
        
        .toast i {
            font-size: 1.2rem;
        }
        
        /* Status indicators */
        .status-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 6px;
        }
        
        .status-active {
            background-color: var(--success);
        }
        
        .status-inactive {
            background-color: var(--danger);
        }
        
        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: var(--light);
            border-radius: 10px;
        }
        
        ::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 10px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: var(--primary-dark);
        }
    </style>
</head>
<body>
    <%- include("../utils/header")%> 
    <%- include("side")%>

    <div class="admin-container fade-in">
        <div class="page-header">
            <h1 class="page-title">Product Management</h1>
            <div>
                <a href="/addproduct" class="btn btn-add">
                    <i class="bi bi-plus-lg"></i> Add New Product
                </a>
            </div>
        </div>
        
        <!-- Search and Filter Bar -->
        <div class="search-filter-bar">
            <div class="search-box">
                <i class="bi bi-search"></i>
                <input type="text" id="searchInput" placeholder="Search products...">
            </div>
            
            <div class="filter-dropdown">
                <button>
                    <i class="bi bi-funnel"></i>
                    <span>Filter</span>
                </button>
                <div class="filter-dropdown-content">
                    <div class="filter-option" data-filter="all">All Products</div>
                    <div class="filter-option" data-filter="low">Low Stock (< 10)</div>
                    <div class="filter-option" data-filter="medium">Medium Stock (10-30)</div>
                    <div class="filter-option" data-filter="high">High Stock (> 30)</div>
                </div>
            </div>
        </div>
        
        <div class="product-grid">
            <% if(products.length === 0) { %>
                <div class="empty-state">
                    <i class="bi bi-box-seam"></i>
                    <h3>No Products Found</h3>
                    <p>You haven't added any products yet. Click the button above to add your first product.</p>
                    <a href="/addproduct" class="btn btn-add">
                        <i class="bi bi-plus-lg"></i> Add Product
                    </a>
                </div>
            <% } else { %>
                <% products.forEach(product => { %>
                    <div class="product-card" 
                         data-name="<%= product.product_name.toLowerCase() %>"
                         data-stock="<%= product.product_stock %>">
                        <div class="product-image-container">
                            <img src="<%= product.product_image %>" alt="<%= product.product_name %>" class="product-image">
                            <% if(product.product_stock <= 10) { %>
                                <span class="product-badge badge-low">
                                    <i class="bi bi-exclamation-triangle-fill"></i> Low Stock: <%= product.product_stock %>
                                </span>
                            <% } else if(product.product_stock <= 30) { %>
                                <span class="product-badge badge-stock">
                                    <i class="bi bi-box-seam"></i> Stock: <%= product.product_stock %>
                                </span>
                            <% } %>
                            <% if(product.isNew) { %>
                                <span class="product-badge badge-new">
                                    <i class="bi bi-star-fill"></i> New
                                </span>
                            <% } %>
                        </div>
                        
                        <div class="product-body">
                            <h3 class="product-title"><%= product.product_name %></h3>
                            <div class="product-price">₹<%= product.product_price.toFixed(2) %></div>
                            <p class="product-description"><%= product.product_description %></p>
                            
                            <div class="product-actions">
                                <button class="btn btn-view btn-sm" 
                                    onclick="openViewModal(
                                        '<%= product.product_image %>',
                                        '<%= product.product_name %>',
                                        '<%= product.product_description %>',
                                        '<%= product.product_price.toFixed(2) %>',
                                        '<%= product.product_stock %>',
                                        '<%= product.category || "N/A" %>',
                                        '<%= product.createdAt ? new Date(product.createdAt).toLocaleDateString() : "N/A" %>'
                                    )">
                                    <i class="bi bi-eye-fill"></i> View
                                </button>
                                
                                <a href="/productedit/?productno=<%= product.product_no %>" class="btn btn-edit btn-sm">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                
                                <button class="btn btn-delete btn-sm" onclick="confirmDelete(<%= product.product_no %>, '<%= product.product_name %>')">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <!-- View Product Modal -->
    <div class="modal-overlay" id="viewOverlay"></div>
    <div class="modal-container" id="viewModal">
        <div class="modal-header">
            <h3 class="modal-title">Product Details</h3>
            <button type="button" class="btn-close" onclick="closeViewModal()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="modal-image-container">
                <img id="viewModalImage" src="" alt="" class="modal-image">
            </div>
            <div class="modal-detail">
                <span class="modal-detail-label">Product Name</span>
                <p class="modal-detail-value" id="viewModalName"></p>
            </div>
            <div class="modal-detail">
                <span class="modal-detail-label">Price</span>
                <p class="modal-detail-value" id="viewModalPrice"></p>
            </div>
            <div class="modal-detail">
                <span class="modal-detail-label">Description</span>
                <p class="modal-detail-value" id="viewModalDescription"></p>
            </div>
            <div class="modal-detail">
                <span class="modal-detail-label">Current Stock</span>
                <p class="modal-detail-value" id="viewModalStock"></p>
            </div>
            <div class="modal-detail">
                <span class="modal-detail-label">Category</span>
                <p class="modal-detail-value" id="viewModalCategory"></p>
            </div>
            <div class="modal-detail">
                <span class="modal-detail-label">Date Added</span>
                <p class="modal-detail-value" id="viewModalDate"></p>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeViewModal()">
                <i class="bi bi-x-circle"></i> Close
            </button>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal-overlay" id="deleteOverlay"></div>
    <div class="modal-container delete-modal" id="deleteModal">
        <div class="modal-header">
            <h3 class="modal-title">Confirm Deletion</h3>
            <button type="button" class="btn-close" onclick="closeDeleteModal()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="delete-icon">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>
            <h4>Are you sure you want to delete this product?</h4>
            <p>Product: <strong id="deleteProductName"></strong></p>
            <p>This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeDeleteModal()">
                <i class="bi bi-x-circle"></i> Cancel
            </button>
            <button class="btn btn-delete" id="confirmDeleteBtn">
                <i class="bi bi-trash-fill"></i> Delete
            </button>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast" id="toastNotification">
        <i class="bi bi-check-circle-fill"></i>
        <span id="toastMessage">Operation completed successfully</span>
    </div>

    <footer>
        <%- include("../utils/footer")%>
    </footer>
    
    <script>
        // View Modal Functions
        function openViewModal(image, name, description, price, stock, category, date) {
            document.getElementById('viewModalImage').src = image;
            document.getElementById('viewModalName').textContent = name;
            document.getElementById('viewModalDescription').textContent = description;
            document.getElementById('viewModalPrice').textContent = '₹' + price;
            document.getElementById('viewModalStock').textContent = stock;
            document.getElementById('viewModalCategory').textContent = category || 'N/A';
            document.getElementById('viewModalDate').textContent = date || 'N/A';
            
            document.getElementById('viewOverlay').classList.add('active');
            document.getElementById('viewModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }
        
        function closeViewModal() {
            document.getElementById('viewOverlay').classList.remove('active');
            document.getElementById('viewModal').classList.remove('active');
            document.body.style.overflow = 'auto';
        }
        
        // Delete Modal Functions
        function confirmDelete(productNo, productName) {
            document.getElementById('deleteProductName').textContent = productName;
            document.getElementById('deleteOverlay').classList.add('active');
            document.getElementById('deleteModal').classList.add('active');
            document.body.style.overflow = 'hidden';
            
            // Set up the confirm button
            const confirmBtn = document.getElementById('confirmDeleteBtn');
            confirmBtn.onclick = function() {
                // Show loading state
                showToast('Deleting product...', 'warning');
                
                // Simulate API call
                setTimeout(() => {
                    window.location.href = `/productdelete?productno=${productNo}`;
                    showToast('Product deleted successfully', 'success');
                }, 1000);
            };
        }
        
        function closeDeleteModal() {
            document.getElementById('deleteOverlay').classList.remove('active');
            document.getElementById('deleteModal').classList.remove('active');
            document.body.style.overflow = 'auto';
        }
        
        // Close modals when clicking on overlay
        document.getElementById('viewOverlay').addEventListener('click', closeViewModal);
        document.getElementById('deleteOverlay').addEventListener('click', closeDeleteModal);
        
        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if(e.key === 'Escape') {
                closeViewModal();
                closeDeleteModal();
            }
        });
        
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const productCards = document.querySelectorAll('.product-card');
            
            productCards.forEach(card => {
                const productName = card.getAttribute('data-name');
                if(productName.includes(searchTerm)) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        });
        
        // Filter functionality
        document.querySelectorAll('.filter-option').forEach(option => {
            option.addEventListener('click', function() {
                const filter = this.getAttribute('data-filter');
                const productCards = document.querySelectorAll('.product-card');
                
                productCards.forEach(card => {
                    const stock = parseInt(card.getAttribute('data-stock'));
                    
                    switch(filter) {
                        case 'all':
                            card.style.display = '';
                            break;
                        case 'low':
                            card.style.display = stock <= 10 ? '' : 'none';
                            break;
                        case 'medium':
                            card.style.display = stock > 10 && stock <= 30 ? '' : 'none';
                            break;
                        case 'high':
                            card.style.display = stock > 30 ? '' : 'none';
                            break;
                        default:
                            card.style.display = '';
                    }
                });
            });
        });
        
        // Toast notification function
        function showToast(message, type) {
            const toast = document.getElementById('toastNotification');
            const toastMessage = document.getElementById('toastMessage');
            
            toast.className = 'toast'; // Reset classes
            toast.classList.add(`toast-${type}`);
            toastMessage.textContent = message;
            
            // Set appropriate icon
            const icon = toast.querySelector('i');
            if (type === 'success') {
                icon.className = 'bi bi-check-circle-fill';
            } else if (type === 'error') {
                icon.className = 'bi bi-x-circle-fill';
            } else if (type === 'warning') {
                icon.className = 'bi bi-exclamation-triangle-fill';
            }
            
            toast.classList.add('show');
            
            // Hide after 3 seconds
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        // Check for success message in URL parameters
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            if(urlParams.has('success')) {
                showToast('Operation completed successfully!', 'success');
            } else if(urlParams.has('error')) {
                showToast('An error occurred. Please try again.', 'error');
            }
            
            // Remove the parameters from URL without reloading
            if(urlParams.has('success') || urlParams.has('error')) {
                const cleanUrl = window.location.pathname;
                window.history.replaceState({}, document.title, cleanUrl);
            }
        });
        
        // Ripple effect for buttons
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('btn') || e.target.closest('.btn')) {
                const btn = e.target.classList.contains('btn') ? e.target : e.target.closest('.btn');
                const rect = btn.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const ripple = document.createElement('span');
                ripple.classList.add('ripple');
                ripple.style.left = `${x}px`;
                ripple.style.top = `${y}px`;
                
                btn.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
            }
        });
        
        // Card hover animation
        const cards = document.querySelectorAll('.product-card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', () => {
                card.style.zIndex = '10';
            });
            
            card.addEventListener('mouseleave', () => {
                card.style.zIndex = '';
            });
        });
        
        // Force transition on theme change for specific elements
        function applyThemeTransition() {
            const elements = document.querySelectorAll('body, .product-card, .btn, .modal-container, .modal-header, .modal-footer');
            elements.forEach(el => {
                el.style.transition = 'background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease';
            });
        }
        
        // Call this function on page load
        applyThemeTransition();
    </script>
    

    <script>
        // Enhanced handleButtonClick with error handling
        function handleButtonClick(button, url) {
            button.classList.add('loading');
            
            // Simulate network request with timeout
            setTimeout(() => {
                fetch(url, {
                    method: 'GET',
                    credentials: 'same-origin'
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response;
                })
                .then(() => {
                    if (url.includes('addtocart')) {
                        animateAddToCart(button);
                        updateCartCount();
                    } else {
                        window.location.href = url;
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    button.classList.remove('loading');
                    // Show error message to user
                    alert('An error occurred. Please try again later.');
                })
                .finally(() => {
                    button.classList.remove('loading');
                });
            }, 1000);
        }

        // Enhanced modal functions with animations
        let currentProductNo = null;
        
        function openModal(image, name, description, price, productNo) {
            // Set main image
            document.getElementById('modal-img').src = image;
            document.getElementById('thumb-main').src = image;
            
            // Set product details
            document.getElementById('modal-name').textContent = name;
            document.getElementById('modal-price').textContent = '₹' + price;
            document.getElementById('modal-description').textContent = description;
            
            // Store current product number
            currentProductNo = productNo;
            
            // Update modal buttons
            document.getElementById('modal-buy-now').onclick = function() {
                const quantity = document.getElementById('modal-quantity').value;
                handleButtonClick(this, `/buynow1?product_no=${productNo}&quantity=${quantity}`);
            };
            
            document.getElementById('modal-add-to-cart').onclick = function() {
                const quantity = document.getElementById('modal-quantity').value;
                handleButtonClick(this, `/addtocart?product_no=${productNo}&quantity=${quantity}`);
            };
            
            // Show overlay first
            document.querySelector('.overlay').classList.add('active');
            
            // Then show modal after a slight delay
            setTimeout(() => {
                document.querySelector('.modal').classList.add('active');
            }, 50);
            
            // Prevent scrolling when modal is open
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            // Hide modal first
            document.querySelector('.modal').classList.remove('active');
            
            // Then hide overlay after animation completes
            setTimeout(() => {
                document.querySelector('.overlay').classList.remove('active');
            }, 300);
            
            // Re-enable scrolling
            document.body.style.overflow = '';
        }
        
        // Change main image when thumbnail is clicked
        function changeMainImage(thumbnail) {
            // Remove active class from all thumbnails
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            
            // Add active class to clicked thumbnail
            thumbnail.classList.add('active');
            
            // Get the image source from the thumbnail
            const newSrc = thumbnail.querySelector('img').src;
            
            // Change main image with fade effect
            const mainImg = document.getElementById('modal-img');
            mainImg.style.opacity = 0;
            
            setTimeout(() => {
                mainImg.src = newSrc;
                mainImg.style.opacity = 1;
            }, 200);
        }
        
        // Close modal when clicking on overlay
        document.querySelector('.overlay').addEventListener('click', closeModal);
        
        // Close modal with ESC key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && document.querySelector('.modal').classList.contains('active')) {
                closeModal();
            }
        });

        // Enhanced cart count functionality with localStorage caching
        function updateCartCount() {
            // Check localStorage first for cached count
            const cachedCount = localStorage.getItem('cartCount');
            if (cachedCount) {
                updateCartUI(parseInt(cachedCount));
            }
            
            // Then fetch fresh data from server
            fetch('/api/shopping/count')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    updateCartUI(data.count);
                    // Cache the count
                    localStorage.setItem('cartCount', data.count);
                })
                .catch(error => {
                    console.error('Error fetching cart count:', error);
                    // If fetch fails, use cached value if available
                    if (cachedCount) {
                        updateCartUI(parseInt(cachedCount));
                    }
                });
        }
        
        function updateCartUI(count) {
            const cartCountElement = document.querySelector('.cart-count');
            if (count > 0) {
                cartCountElement.textContent = count;
                cartCountElement.style.display = 'flex';
                
                // Add animation to cart count when it changes
                cartCountElement.style.animation = 'none';
                void cartCountElement.offsetWidth; // Trigger reflow
                cartCountElement.style.animation = 'pulse 0.5s';
            } else {
                cartCountElement.style.display = 'none';
            }
        }
        
        // Initialize cart count and set up periodic refresh
        document.addEventListener('DOMContentLoaded', function() {
            updateCartCount();
            
            // Refresh cart count every 30 seconds
            setInterval(updateCartCount, 30000);
            
            // Add hover effect to product images
            document.querySelectorAll('.product-img-container').forEach(container => {
                const img = container.querySelector('img');
                
                container.addEventListener('mousemove', (e) => {
                    const { left, top, width, height } = container.getBoundingClientRect();
                    const x = (e.clientX - left) / width * 100;
                    const y = (e.clientY - top) / height * 100;
                    img.style.transformOrigin = `${x}% ${y}%`;
                });
            });
        });

        // Add to cart animation
        function animateAddToCart(button) {
            const cartBtn = document.querySelector('.floating-cart-btn');
            const buttonRect = button.getBoundingClientRect();
            const cartRect = cartBtn.getBoundingClientRect();
            
            // Create flying element
            const flyingItem = document.createElement('div');
            flyingItem.style.position = 'fixed';
            flyingItem.style.left = `${buttonRect.left + buttonRect.width/2}px`;
            flyingItem.style.top = `${buttonRect.top}px`;
            flyingItem.style.width = '20px';
            flyingItem.style.height = '20px';
            flyingItem.style.backgroundColor = 'var(--primary-color)';
            flyingItem.style.borderRadius = '50%';
            flyingItem.style.zIndex = '1000';
            flyingItem.style.transition = 'all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            document.body.appendChild(flyingItem);
            
            // Animate to cart
            setTimeout(() => {
                flyingItem.style.left = `${cartRect.left + cartRect.width/2}px`;
                flyingItem.style.top = `${cartRect.top + cartRect.height/2}px`;
                flyingItem.style.transform = 'scale(0.1)';
                flyingItem.style.opacity = '0.5';
            }, 10);
            
            // Remove after animation
            setTimeout(() => {
                flyingItem.remove();
                
                // Bounce cart button
                cartBtn.style.transform = 'scale(1.1)';
                setTimeout(() => {
                    cartBtn.style.transform = 'scale(1)';
                }, 300);
            }, 800);
        }
    </script>
    

                            <div class="detail-row">
                                <span class="detail-label">Date & Time:</span>
                                <span class="detail-value">May 15, 2023 - 14:30 IST</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Payment Method:</span>
                                <span class="detail-value">Bank Transfer</span>
                            </div>
                            <div class="detail-row">

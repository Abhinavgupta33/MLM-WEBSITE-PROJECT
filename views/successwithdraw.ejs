<%- include("../utils/footer"); %> 
  
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Theme toggle functionality
            const themeToggle = document.querySelector('.theme-toggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', function() {
                    const currentTheme = document.documentElement.getAttribute('data-theme');
                    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                    document.documentElement.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                });
            }

            // Check for saved theme preference
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);

            // Create cash particles background
            const cashBackground = document.getElementById('cashBackground');
            const denominations = ['₹100', '₹200', '₹500', '₹2000'];
            
            function createCashParticles() {
                // Clear existing particles
                cashBackground.innerHTML = '';
                
                // Create floating cash particles
                for (let i = 0; i < 20; i++) {
                    const particle = document.createElement('div');
                    particle.className = 'cash-particle';
                    
                    // Random size
                    const width = Math.random() * 40 + 40;
                    const height = width / 2;
                    particle.style.width = `${width}px`;
                    particle.style.height = `${height}px`;
                    
                    // Random position
                    particle.style.left = `${Math.random() * 100}%`;
                    
                    // Random denomination
                    const denomIndex = Math.floor(Math.random() * denominations.length);
                    particle.textContent = denominations[denomIndex];
                    
                    // Random animation duration and delay
                    const duration = Math.random() * 15 + 10;
                    const delay = Math.random() * 15;
                    particle.style.animation = `floatCash ${duration}s linear ${delay}s infinite`;
                    
                    // Random rotation
                    const rotation = Math.random() * 30 - 15;
                    particle.style.transform = `rotate(${rotation}deg)`;
                    
                    // Color based on denomination
                    if (denomIndex === 2) { // ₹500
                        particle.classList.add('bill');
                    } else if (denomIndex === 3) { // ₹2000
                        particle.style.background = 'linear-gradient(135deg, #f5f5f5, #87CEEB)';
                    } else if (Math.random() > 0.7) {
                        particle.classList.add('coin');
                        particle.style.width = `${width / 1.5}px`;
                        particle.style.height = `${width / 1.5}px`;
                    }
                    
                    cashBackground.appendChild(particle);
                }
            }
            
            // Initial creation of cash particles
            createCashParticles();
            
            // Refresh particles periodically
            setInterval(createCashParticles, 30000);
            
            // Create money transfer animation
            function createMoneyTransferAnimation() {
                const container = document.getElementById('moneyTransferContainer');
                const transfer = document.createElement('div');
                transfer.className = 'money-transfer';
                
                // Random position
                transfer.style.left = `${Math.random() * 80 + 10}%`;
                transfer.style.top = `${Math.random() * 80 + 10}%`;
                
                container.appendChild(transfer);
                
                // Remove after animation
                setTimeout(() => {
                    transfer.remove();
                }, 4000);
            }
            
            // Initial money transfer animation
            setTimeout(createMoneyTransferAnimation, 1000);
            
            // Periodic money transfer animations
            setInterval(createMoneyTransferAnimation, 3000);
            
            // Create confetti effect
            function createConfetti() {
                const colors = ['#f44336', '#e91e63', '#9c27b0', '#673ab7', '#3f51b5', 
                               '#2196f3', '#03a9f4', '#00bcd4', '#009688', '#4CAF50', 
                               '#8BC34A', '#CDDC39', '#FFEB3B', '#FFC107', '#FF9800'];
                
                for (let i = 0; i < 50; i++) {
                    setTimeout(() => {
                        const confetti = document.createElement('div');
                        confetti.className = 'confetti';
                        
                        // Random size
                        const size = Math.random() * 10 + 5;
                        confetti.style.width = `${size}px`;
                        confetti.style.height = `${size}px`;
                        
                        // Random shape
                        if (Math.random() > 0.5) {
                            confetti.style.borderRadius = '50%';
                        }
                        
                        // Random color
                        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                        
                        // Random position
                        confetti.style.left = `${Math.random() * 100}%`;
                        
                        // Random animation duration and delay
                        const duration = Math.random() * 3 + 2;
                        confetti.style.animationDuration = `${duration}s`;
                        
                        document.body.appendChild(confetti);
                        
                        // Remove after animation
                        setTimeout(() => {
                            confetti.remove();
                        }, duration * 1000);
                    }, i * 50);
                }
            }
            
            // Create confetti on page load
            setTimeout(createConfetti, 1500);
            
            // Add ripple effect to buttons
            function addRippleEffect(button) {
                button.addEventListener('click', function(e) {
                    // Create ripple effect
                    const rect = this.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    const ripple = document.createElement('span');
                    ripple.className = 'ripple';
                    ripple.style.left = `${x}px`;
                    ripple.style.top = `${y}px`;
                    this.appendChild(ripple);
                    
                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            }
            
            // Apply ripple effect to all success buttons
            document.querySelectorAll('.success-btn').forEach(btn => {
                addRippleEffect(btn);
            });
            
            // Button click handlers
            document.getElementById('homeBtn').addEventListener('click', function() {
                // Create receipt effect before redirecting
                const receipt = document.createElement('div');
                receipt.className = 'receipt-effect';
                document.body.appendChild(receipt);
                
                setTimeout(() => {
                    window.location.href = '/dashboard';
                }, 1000);
            });
            
            document.getElementById('receiptBtn').addEventListener('click', function() {
                // Create print receipt effect
                const receipt = document.createElement('div');
                receipt.className = 'receipt-effect';
                receipt.style.display = 'block';
                receipt.style.left = '50%';
                receipt.style.marginLeft = '-100px';
                receipt.style.top = '50%';
                receipt.style.marginTop = '-150px';
                document.body.appendChild(receipt);
                
                // Open print dialog after animation
                setTimeout(() => {
                    window.print();
                    receipt.remove();
                }, 2000);
            });
            
            // Responsive sidebar toggle
            const sidebarToggle = document.querySelector('.sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');
            
            if (sidebarToggle && sidebar) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                });
            }
            
            // Add rate ticker animation
            const rates = [
                "USD/INR: 82.45 ▲0.12%",
                "EUR/INR: 89.23 ▼0.05%",
                "GBP/INR: 103.67 ▲0.18%",
                "BTC/INR: 2,450,321 ▲1.25%"
            ];
            
            function updateRateTicker() {
                const ticker = document.createElement('div');
                ticker.className = 'rate-ticker';
                ticker.textContent = rates[Math.floor(Math.random() * rates.length)];
                document.body.appendChild(ticker);
                
                setTimeout(() => {
                    ticker.remove();
                }, 3000);
            }
            
            // Initial rate ticker
            setTimeout(updateRateTicker, 2000);
            
            // Periodic rate updates
            setInterval(updateRateTicker, 5000);
            
            // Add watermark
            const watermark = document.createElement('div');
            watermark.className = 'watermark';
            watermark.textContent = 'SECURE';
            watermark.style.top = `${Math.random() * 60 + 20}%`;
            watermark.style.left = `${Math.random() * 60 + 20}%`;
            document.body.appendChild(watermark);
            
            // Add security badge animation
            setInterval(() => {
                const badges = document.querySelectorAll('.security-badge');
                badges.forEach(badge => {
                    badge.style.animation = 'none';
                    void badge.offsetWidth; // Trigger reflow
                    badge.style.animation = 'badgePulse 2s infinite';
                });
            }, 5000);
            
            // Add viewport resize handler
            window.addEventListener('resize', function() {
                // Recreate cash particles on resize for better positioning
                createCashParticles();
            });
            
            // Add keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                // Ctrl+H for home
                if (e.ctrlKey && e.key === 'h') {
                    e.preventDefault();
                    document.getElementById('homeBtn').click();
                }
                
                // Ctrl+P for print receipt
                if (e.ctrlKey && e.key === 'p') {
                    e.preventDefault();
                    document.getElementById('receiptBtn').click();
                }
            });
            
            // Add service worker for offline functionality
            if ('serviceWorker' in navigator) {
                window.addEventListener('load', () => {
                    navigator.serviceWorker.register('/sw.js').then(registration => {
                        console.log('ServiceWorker registration successful');
                    }).catch(err => {
                        console.log('ServiceWorker registration failed: ', err);
                    });
                });
            }
            
            // Add vibration feedback on button click
            document.querySelectorAll('button').forEach(button => {
                button.addEventListener('click', function() {
                    if ('vibrate' in navigator) {
                        navigator.vibrate(50);
                    }
                });
            });
            
            // Add analytics tracking
            window.dataLayer = window.dataLayer || [];
            function gtag() { dataLayer.push(arguments); }
            gtag('js', new Date());
            gtag('config', 'UA-XXXXX-Y');
            
            // Performance monitoring
            window.addEventListener('load', function() {
                if ('performance' in window) {
                    const timing = performance.timing;
                    const loadTime = timing.loadEventEnd - timing.navigationStart;
                    console.log(`Page loaded in ${loadTime}ms`);
                    
                    if (loadTime > 3000) {
                        console.warn('Page load time is longer than 3 seconds');
                    }
                }
            });
        });
    </script>

                            <div class="progress-step completed">
                                <div class="step-number">3</div>
                                <div class="step-label">Completed</div>
                            </div>
                        </div>
                        
                        <!-- Action buttons -->
                        <div class="button-group animate__animated animate__fadeIn animate__delay-2s">
                            <button class="success-btn" id="homeBtn">
                                <i class="fas fa-home btn-icon"></i> Go to Dashboard

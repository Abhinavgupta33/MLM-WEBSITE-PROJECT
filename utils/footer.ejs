<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  // Initialize AOS animations
  AOS.init({
    duration: 800,
    easing: 'ease-in-out',
    once: true
  });

  // Initialize particles.js for footer background
  document.addEventListener('DOMContentLoaded', function() {
    if (document.getElementById('footer-particles')) {
      particlesJS('footer-particles', {
        particles: {
          number: { value: 30, density: { enable: true, value_area: 800 } },
          color: { value: "#2563eb" },
          shape: { type: "circle" },
          opacity: { value: 0.1, random: true },
          size: { value: 3, random: true },
          line_linked: { enable: false },
          move: {
            enable: true,
            speed: 1,
            direction: "none",
            random: true,
            straight: false,
            out_mode: "out",
            bounce: false
          }
        },
        interactivity: { detect_on: "canvas", events: { onhover: { enable: false } } }
      });
    }

    // Auto-update year
    document.getElementById('current-year').textContent = new Date().getFullYear();
    
    // Back to Top Button
    const backToTopBtn = document.querySelector('.back-to-top');
    
    window.addEventListener('scroll', function() {
      if (window.pageYOffset > 300) {
        backToTopBtn.classList.add('active');
      } else {
        backToTopBtn.classList.remove('active');
      }
    });
    
    backToTopBtn.addEventListener('click', function(e) {
      e.preventDefault();
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });

    // Animate elements when they come into view
    const animateElementsOnScroll = () => {
      const elements = {
        badges: document.querySelectorAll('.badge'),
        links: document.querySelectorAll('.footer-links li'),
        contactItems: document.querySelectorAll('.contact-item'),
        newsletterBox: document.querySelector('.newsletter-box'),
        socialLinks: document.querySelectorAll('.social-link'),
        paymentMethods: document.querySelectorAll('.payment-methods img'),
        copyright: document.querySelector('.copyright'),
        legalLinks: document.querySelectorAll('.legal-links a'),
        disclaimer: document.querySelector('.mlm-disclaimer'),
        floatingCTA: document.querySelector('.floating-cta')
      };

      const isInViewport = (el) => {
        const rect = el.getBoundingClientRect();
        return (
          rect.top <= (window.innerHeight || document.documentElement.clientHeight) &&
          rect.bottom >= 0
        );
      };

      // Animate badges
      elements.badges.forEach((badge, index) => {
        if (isInViewport(badge)) {
          setTimeout(() => {
            badge.classList.add('animate');
          }, index * 100);
        }
      });

      // Animate footer links
      elements.links.forEach((link, index) => {
        if (isInViewport(link)) {
          setTimeout(() => {
            link.classList.add('animate');
          }, index * 50);
        }
      });

      // Animate contact items
      elements.contactItems.forEach((item, index) => {
        if (isInViewport(item)) {
          setTimeout(() => {
            item.classList.add('animate');
          }, index * 100);
        }
      });

      // Animate newsletter box
      if (elements.newsletterBox && isInViewport(elements.newsletterBox)) {
        elements.newsletterBox.classList.add('animate');
      }

      // Animate social links
      elements.socialLinks.forEach((link, index) => {
        if (isInViewport(link)) {
          setTimeout(() => {
            link.classList.add('animate');
          }, index * 100);
        }
      });

      // Animate payment methods
      elements.paymentMethods.forEach((img, index) => {
        if (isInViewport(img)) {
          setTimeout(() => {
            img.classList.add('animate');
          }, index * 100);
        }
      });

      // Animate copyright
      if (elements.copyright && isInViewport(elements.copyright)) {
        elements.copyright.classList.add('animate');
      }

      // Animate legal links
      elements.legalLinks.forEach((link, index) => {
        if (isInViewport(link)) {
          setTimeout(() => {
            link.classList.add('animate');
          }, index * 100);
        }
      });

      // Animate disclaimer
      if (elements.disclaimer && isInViewport(elements.disclaimer)) {
        elements.disclaimer.classList.add('animate');
      }

      // Animate floating CTA
      if (elements.floatingCTA && isInViewport(elements.floatingCTA)) {
        elements.floatingCTA.classList.add('animate');
      }
    };

    // Run on load and scroll
    window.addEventListener('load', animateElementsOnScroll);
    window.addEventListener('scroll', animateElementsOnScroll);

    // Add smooth hover effects
    document.querySelectorAll('.badge, .social-link, .footer-link').forEach(el => {
      el.addEventListener('mouseenter', () => {
        el.style.transition = 'all 0.3s ease';
      });
    });

    // Animate link icons on hover
    document.querySelectorAll('.footer-link').forEach(link => {
      link.addEventListener('mouseenter', () => {
        const icon = link.querySelector('.link-icon');
        if (icon) {
          icon.style.transform = 'translateX(3px)';
        }
      });
      link.addEventListener('mouseleave', () => {
        const icon = link.querySelector('.link-icon');
        if (icon) {
          icon.style.transform = 'translateX(0)';
        }
      });
    });
  });
</script>